{


  "compilerOptions": {

    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [ "es2015", "dom" ],
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "typeRoots": [
      "./node_modules/@types/"
    ]
  },

  "files": [

    "Scripts/ngStarters/aot/AppOne.ts",
    "Scripts/ngStarters/aot/AppTwo.ts",
    "Scripts/ngModules/AppOneModule",
    "Scripts/ngModules/AppTwoModule"
  ],

  "angularCompilerOptions": {
    "genDir": "aot",
    "skipMetadataEmit": true
  },
  "exclude": [
    "**/*.d.ts",
    "**/jit/*",
    "node_modules",
    "node_modules/**/*",
    "**/node_modules",
    "node_modules/@typings/**/*",
    "typings",
    "typings/browser",
    "typings/main",
    "typings/main",
    "typings/main.d.ts"
  ]
}